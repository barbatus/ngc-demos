{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "types": [
      "meteor-typings",
      "@types/meteor-accounts-phone",
      "@types/meteor-publish-composite",
      "@types/chai-spies",
      "@types/mocha",
      "@types/chai"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
