{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "types": [
      "meteor-typings",
      "zone.js",
      "@types/node",
      "@types/es6-shim"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "client/imports/app/app.module.ts",
    "typings.d.ts"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true,
    "namedExports": {
      "ng2-pagination": ["Ng2PaginationModule", "PaginationService"]
    }
  }
}